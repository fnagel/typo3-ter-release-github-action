{
	"name": "felixnagel/typo3-ter-release-github-action",
	"type": "project",
	"description": "Example workflow how to do a TYPO3 CMS TER release using a GitHub workflow action.",
	"keywords": [
		"TYPO3",
		"GitHub",
		"CMS",
		"workflow",
		"action",
		"TER",
		"release",
		"version",
		"example"
	],
	"homepage": "https://github.com/fnagel/typo3-ter-release-github-action",
	"support": {
		"issues": "https://github.com/fnagel/typo3-ter-release-github-action/issues",
		"docs": "https://github.com/fnagel/typo3-ter-release-github-action/blob/master/README.md",
		"source": "https://github.com/fnagel/typo3-ter-release-github-action"
	},
	"authors": [
		{
			"name": "Felix Nagel",
			"email": "info@felixnagel.com",
			"role": "Project Leader, Developer"
		}
	],
	"license": "GPL-2.0-or-later",
	"require": {
		"php": "^7"
	},
	"require-dev": {
		"php-parallel-lint/php-parallel-lint": "^1.3"
	},
	"config": {
		"allow-plugins": {
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true
		}
	},
	"scripts": {
		"test": [
			"@test-php-lint"
		],
		"test-php-lint": [
			"@php vendor/bin/parallel-lint ./"
		]
	}
}
